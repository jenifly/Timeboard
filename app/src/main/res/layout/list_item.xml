<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg_more_intent_list_item"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:padding="6dp"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="自然风景"/>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text=">>>"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/bg_more_intent_list_p1"
            android:layout_marginRight="4dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/bg_more_intent_list_p2"
            android:layout_marginRight="4dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/bg_more_intent_list_p3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/bg_more_intent_list_tv"
                android:visibility="gone"
                android:background="#AA060606"
                android:textColor="@color/backgroud"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="36dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>