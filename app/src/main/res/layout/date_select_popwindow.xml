<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:layout_height="46dp">
        <TextView
            android:id="@+id/cancelBtn"
            android:textSize="14sp"
            android:text="取消"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/title"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:text="相恋时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/confirmBtn"
            android:textSize="14sp"
            android:text="下一步"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <TextView
        android:id="@+id/show_select"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:textSize="13sp"
        android:text="2017年12月12日  24时12分12秒"
        android:layout_width="match_parent"
        android:layout_height="36dp"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:id="@+id/secect_date"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.jenifly.timeboard.view.PickerView
            android:id="@+id/year_pv"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="160dp" />
        <View
            android:id="@+id/view3"
            android:layout_width="1px"
            android:layout_height="match_parent"/>
        <com.jenifly.timeboard.view.PickerView
            android:id="@+id/month_pv"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="160dp" />
        <View
            android:id="@+id/view4"
            android:layout_width="1px"
            android:layout_height="match_parent"/>
        <com.jenifly.timeboard.view.PickerView
            android:id="@+id/day_pv"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="160dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secect_time"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.jenifly.timeboard.view.PickerView
            android:id="@+id/hour_pv"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="160dp" />
        <View
            android:id="@+id/view5"
            android:layout_width="1px"
            android:layout_height="match_parent"/>
        <com.jenifly.timeboard.view.PickerView
            android:id="@+id/minute_pv"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="160dp" />
        <View
            android:id="@+id/view6"
            android:layout_width="1px"
            android:layout_height="match_parent"/>
        <com.jenifly.timeboard.view.PickerView
            android:id="@+id/second_pv"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="160dp" />
    </LinearLayout>
</LinearLayout>
